<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip">
    <TextView
        android:id="@+id/item_DataDownload_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="员工为什么要去执行7S"
        android:textSize="14sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip">
        <TextView
            android:id="@+id/item_datadownload_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期：2018-5-30"
            android:textColor="#c0beb9"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/item_datadownload_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/item_datadownload_date"
            android:text="下载次数：10次"
            android:textColor="#c0beb9"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/item_datadownload_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="¥3.0"
            android:textColor="#ff0b0c" />
    </RelativeLayout>
</LinearLayout>
